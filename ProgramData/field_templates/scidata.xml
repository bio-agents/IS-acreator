<isatab-config-file xmlns="http://www.ebi.ac.uk/bii/isatab_configuration#">
    <isatab-configuration table-name="SciData">
        <measurement term-label="[investigation]" term-accession="" source-abbreviation=""/>
        <technology term-label="" term-accession="" source-abbreviation=""/>

        <field header="Comment[Manuscript Licence]" data-type="List" is-file-field="false"
               is-multiple-value="false" is-required="false" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(to be added by Scientific Data). The Creative Commons licence selected for the DD manuscript in the Scientific Data manuscript tracking system. Use one of the following options:]]></description>
            <default-value><![CDATA[]]></default-value>
            <list-values>CC BY 3.0,CC BY-NC 3.0,CC BY-NC-SA 3.0</list-values>
        </field>
        <field header="Comment[Experimental Metadata Licence]" data-type="String"
               is-file-field="false" is-multiple-value="false" is-required="true" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(mandatory;default value) All ISA-Tab formatted experimental metadata within a DD will be made available under the CC0 protocol to promote maximum reuse; the only value accepted in this field is CC0.]]></description>
            <default-value><![CDATA[CC0]]></default-value>
        </field>
        <field header="Comment[Data Repository]" data-type="String" is-file-field="false"
               is-multiple-value="false" is-required="true" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(mandatory) The name of an external data repository to which the primary data files have been submitted.]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>
        <field header="Comment[Data Record Accession]" data-type="String" is-file-field="false"
               is-multiple-value="false" is-required="true" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(mandatory) The dataset identifier assigned by the external data repository.]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>
        <field header="Comment[Data Record URI]" data-type="String" is-file-field="false"
               is-multiple-value="false" is-required="true" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(mandatory) A URI pointing to a data record in the external data repository.]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>
        <field header="Comment[Supplementary Information File Name]" data-type="String"
               is-file-field="false" is-multiple-value="false" is-required="false" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(to be added by Scientific Data) The name of a figure, table or other supporting file used in any of the above sections: for example, a table containing summary information such as sample numbers, demographics, etc.]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>
        <field header="Comment[Supplementary Information File Type]" data-type="String"
               is-file-field="false" is-multiple-value="false" is-required="false" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(to be added by Scientific Data) Term(s) describing the type of supplementary file(s) appended to the DD manuscript in the Scientific Data manuscript tracking system.]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>
        <field header="Comment[Supplementary Information File URI]" data-type="String" is-file-field="false"
               is-multiple-value="false" is-required="false" is-hidden="false"
               is-forced-ontology="false" section="STUDY">
            <description><![CDATA[(to be added by Scientific Data) A URI pointing to the location of the Supplementary Information file on the Scientific Data website.]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>

        <field header="Comment[Funder]" data-type="String" is-file-field="false"
               is-multiple-value="false" is-required="false" is-hidden="false"
               is-forced-ontology="false" section="STUDY CONTACTS">
            <description><![CDATA[The name of the funding agency(s) that have sponsored the author and the work detailed in the DD]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>
        <field header="Comment[FundRef ID]" data-type="String" is-file-field="false"
               is-multiple-value="false" is-required="false" is-hidden="false"
               is-forced-ontology="false" section="STUDY CONTACTS">
            <description><![CDATA[The unique FundRef identifier for the funding agency(s)]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>
        <field header="Comment[Grant Identifier]" data-type="String" is-file-field="false"
               is-multiple-value="false" is-required="false" is-hidden="false"
               is-forced-ontology="false" section="STUDY CONTACTS">
            <description><![CDATA[Unique identifiers provided by the funding agencies.]]></description>
            <default-value><![CDATA[]]></default-value>
        </field>

    </isatab-configuration>
</isatab-config-file>